                android:textStyle="bold"
                android:textSize="30dp"

                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/black"
                android:text="4"
                android:textStyle="bold"
                android:textSize="30dp"

                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
